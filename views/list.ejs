<%- include('header') -%>

	<!-- BOX HEADER -->
	<div class="box" id="heading">
		<h1>
			<%= listTitle %>
		</h1>
	</div>
	<!-- ITEMS -->
	<div class="box">

		<% newListItem.forEach(elm=> { %>
			<form action="/delete" method="post">
				<div class="item">
					<input type="checkbox" name="checked" value="<%= elm._id %>" onchange="this.form.submit()" />
					<p>
						<%= elm.name %>
					</p>
				</div>
			</form>
			<% }) %>

				<!-- INPUT -->
				<form class="item" action="/" method="post">
					<input type="text" name="newItem" placeholder="New Item" autocomplete="off" />
					<button type="submit" name="list" value="<%= listTitle %>">+</button>
				</form>
	</div>

	<%- include('footer') -%>